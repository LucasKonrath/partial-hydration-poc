# Environment variables for Express backend
NODE_ENV=development
PORT=3001

# Database configuration (if using a real database)
# DATABASE_URL=postgresql://username:password@localhost:5432/retro_games
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=retro_games
# DATABASE_USER=username
# DATABASE_PASSWORD=password

# Redis configuration (for advanced caching)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# API Keys (if integrating with external services)
# EXTERNAL_GAMES_API_KEY=your_api_key_here
# ANALYTICS_API_KEY=your_analytics_key

# Security
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Cache settings
CACHE_TTL=300
CACHE_CHECK_PERIOD=120

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=300
